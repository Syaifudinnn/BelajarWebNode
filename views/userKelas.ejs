    <section class="shop" id="shop">
        <div class="container">
            <% for (item of items) { %>
                <div class="box">
                    <img src="<%= item.gambar %>" style="width: 350px; height: 400px;">
                    <h4>
                        <%= item.name %>
                    </h4>
                    <h5>
                        Rp. <%= item.harga %> / jam
                    </h5>
                </div>
                <% } %>
        </div>
    </section>

    <div class="form-center">
        <form action="/items/transaksi" method="post" id="formCheckout">
            <h3 class="subJudul mt-5 mb-4" id="projectPage">Form Pembelian</h3>
            <div class="flex items-center">
                <input type="text" name="nama"
                    class="w-2/5 w-full border px-3 py-2 text-sm mr-2 bg-white" placeholder="Nama Pembeli">
                <select name="type" class="w-2/5 w-full border px-3 py-2 text-sm mr-2 bg-white">
                    <option value="dibeli">Dibeli</option>
                </select>
                <select placeholder="Paket Item" name="item_id"
                    class="w-2/5 w-full border px-3 py-2 text-sm mr-2 bg-white">
                    <% for (item of items) { %>
                        <option value="<%= item.id %>">
                            <%= item.name %>
                        </option>
                        <% } %>
                </select>
                <input type="number" name="amount" value="0"
                    class="w-2/5 w-full border px-3 py-2 text-sm mr-2 bg-white"> ( jam )
                <button class="w-30 btn btn-lg btn-primary"
                    style="background-color: #364f6b; font-size: 15px; border: transparent;"
                    onclick="alert('Pembelian Berhasil!')">
                    Buy
                </button>
            </div>
        </form>
    </div>

    

